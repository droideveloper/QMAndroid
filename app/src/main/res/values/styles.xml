<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PagerTitleStripStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/default_space</item>
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.ActionBar.Title</item>
    </style>

</resources>
